<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fav_layout_img"
            android:paddingStart="@dimen/fav_layout_padding_left"
            android:layout_margin="@dimen/fav_layout_margin"
            android:contentDescription="@string/default_movie_poster" />

        <TextView
            android:id="@+id/fav_layout_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/fav_layout_padding"
            android:layout_margin="@dimen/fav_layout_text_margin"
            android:textAlignment="center"
            android:textSize="@dimen/fav_layout_text_size"
            android:textStyle="bold"
            tools:text="movie title" />

    </LinearLayout>



</FrameLayout>