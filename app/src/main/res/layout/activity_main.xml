<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="david.com.popularmovies.app.MainActivity">


        <!-- place your view here -->
    <TextView
        android:id="@+id/message_no_network_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/message_no_network"
        android:textSize="@dimen/no_network_message"
        android:visibility="invisible" />

    <!-- TODO add dimens file for all explicit dimensions used -->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_moviePosters"
        android:adjustViewBounds = "true"/>

</FrameLayout>
